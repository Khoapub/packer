#cloud-config
autoinstall:
  version: 1
  early-commands:
    - sudo systemctl stop ssh
  locale: en_GB
  keyboard:
    layout: en
    variant: gb
  storage:
    layout:
      name: lvm
  identity:
    hostname: ubuntu2004
    username: v12n
    password: 'REPLACEWITHCRYPTEDUSERPASS'
  network:
    network:
      version: 2
      ethernets:
        ens33: {dhcp4: true, dhcp-identifier: mac}
  ssh:
    install-server: true
    allow-pw: true
  packages:
    - openssh-server
    - open-vm-tools
  users:
    - name: root
      lock_passwd: false
      hashed_passwd: 'REPLACEWITHCRYPTEDADMINPASS'
  user-data:
    disable_root: false
    package_update: true
    package_upgrade: true
    package_reboot_if_required: true
  late-commands:
    - 'sed -i "s/dhcp4: true/&\n      dhcp-identifier: mac/" /target/etc/netplan/00-installer-config.yaml'
    - echo 'REPLACEWITHUSERNAME ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/REPLACEWITHUSERNAME
    - curtin in-target --target=/target -- chmod 440 /etc/sudoers.d/REPLACEWITHUSERNAME
    - curtin in-target --target=/target -- apt-get update
    - curtin in-target --target=/target -- apt-get upgrade --yes